@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Centro de Carnes don Adrián</title>
    <link rel="icon" type="image/png" href="~/template/images/GISSA1.png">
    <link rel="stylesheet" href="~/template/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/template/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/template/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/template/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="~/template/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/template/css/select.dataTables.min.css">
    <link rel="stylesheet" href="~/template/css/vertical-layout-light/style.css">
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.10.1/sweetalert2.css">

</head>
<body>
    <div class="container-scroller">
        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo mr-5" asp-controller="Home" asp-action="Index"><img src="~/template/images/GISSA2.png" class="mr-2" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" asp-controller="Home" asp-action="Index"><img src="~/template/images/GISSA1.png" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="icon-menu"></span>
                </button>
                <ul class="navbar-nav navbar-nav-right">
                   
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" id="profileDropdown">
                            @if (Context.User.Identity.IsAuthenticated)
                            {
                                var usuario = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
                                <div style="margin-left:2%">
                                    <i class="ti-user" style="color: #96C154;"></i>

                                    <span>@usuario</span>
                                </div>
                            }
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" asp-controller="Usuario" asp-action="ActualizarPerfil">
                                <i class="ti-settings" style="color: #96C154;"></i>

                                Configuración
                            </a>
                            <a class="dropdown-item" asp-controller="Login" asp-action="CerrarSesion">
                                <i class="ti-power-off" style="color: #96C154;"></i>

                                Cerrar Sesión
                            </a>
                        </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="icon-menu"></span>
                </button>
            </div>
        </nav>
        <div class="container-fluid page-body-wrapper">
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                   
                    @if (Context.Session.GetInt32("NombreRol") != 2)
                    {
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#usuariosCollapse" aria-expanded="false" aria-controls="usuariosCollapse">
                                <i class="ti-user menu-icon"></i>
                                <span class="menu-title"> Usuarios</span>
                                <i class="menu-arrow"></i>
                            </a>
                            <div class="collapse" id="usuariosCollapse">
                                <ul class="nav flex-column sub-menu">
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("ConsultUsers", "Usuario")" id="usuariosConsultarLink">Consultar Usuarios</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#HomesCollapse" aria-expanded="false" aria-controls="HomesCollapse">
                            <i class="ti-user ti-bag" style="margin-right: 15px;"></i>
                            <span class="menu-title"> Carlos Zumbado</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="HomesCollapse">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "Home")" id="HomesComprarLink">PruebaGISSA</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    

                </ul>
            </nav>

            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>

                <footer class="footer">
                    <div class="d-sm-flex justify-content-between align-items-center">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">
                            &copy; 2024 GISSA. Todos los derechos reservados.
                        </span>
                        <div class="d-flex justify-content-start align-items-center">
                            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center text-white">
                                <span>
                                    <a href="https://www.gestionadora.cr/" target="_blank" style="text-decoration: underline; font-size: 18px; color: #96C154;">Visita nuestro sitio</a>
                                </span>
                            </span>

                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>
 
    <script src="~/template/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/template/vendors/chart.js/Chart.min.js"></script>
    <script src="~/template/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/template/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <script src="~/template/js/dataTables.select.min.js"></script>
    <script src="~/template/js/off-canvas.js"></script>
    <script src="~/template/js/hoverable-collapse.js"></script>
    <script src="~/template/js/template.js"></script>
    <script src="~/template/js/settings.js"></script>
    <script src="~/template/js/todolist.js"></script>
    <script src="~/template/js/dashboard.js"></script>
    <script src="~/template/js/Chart.roundedBarCharts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.10.1/sweetalert2.min.js"></script>


    @RenderSection("Scripts", required: false)

</body>
